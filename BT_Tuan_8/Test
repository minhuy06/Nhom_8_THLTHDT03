
public class MainTest {
    public static void main(String[] args) {
        System.out.println("--- BÀI THỰC HÀNH TUẦN 8: ABSTRACT CLASS VÀ INTERFACE ---");
    
        IQuanLySach quanLy = new QuanLySachImpl();
        SachGiaoTrinh sgk1 = new SachGiaoTrinh("GT001", "Cơ Sở Lập Trình", "A", 120000.0, 
                                                50, "K1-A1", "Tin học", "Đại học", 2022);
        SachTieuThuyet stt1 = new SachTieuThuyet("TT001", "Hoàng Tử Bé - T1", "B", 75000.0, 
                                                 150, "K2-C3", "Fantasy", true);
        
        quanLy.themSach(sgk1);
        quanLy.themSach(stt1);
        
        System.out.println("\n--- KIỂM TRA CHỨC NĂNG CƠ BẢN ---");
        quanLy.hienThiDanhSach();
    
        System.out.println("\n--- KIỂM TRA INTERFACE IGiaBan ---");
        System.out.println("Giá bán SGK (GT001): " + String.format("%,.0f VNĐ", sgk1.tinhGiaBan())); 
        System.out.println("Giá bán TTiểu Thuyết (TT001): " + String.format("%,.0f VNĐ", stt1.tinhGiaBan())); 
        System.out.println("\n--- KIỂM TRA INTERFACE IKiemKe ---");
        
        boolean duTonKho = sgk1.kiemTraTonKho(10);
        System.out.println("SGK đủ tồn kho (>=10)? " + duTonKho + " (Hiện có: " + sgk1.getSoLuongTonKho() + ")");

        sgk1.capNhatViTri("K3-B2");
        
        System.out.println("\n--- KIỂM TRA TÍNH ĐA HÌNH VÀ QUẢN LÝ ---");

        Sach sachTimThay = quanLy.timKiemSach("GT001");
        if (sachTimThay != null) {
            System.out.println("Tìm thấy sách: " + sachTimThay.getTitle());
            System.out.println("  -> Giá bán tính theo Đa hình: " + String.format("%,.0f VNĐ", sachTimThay.tinhGiaBan()));
        }

        quanLy.xoaSach("TT001");
        quanLy.hienThiDanhSach();
    }
}